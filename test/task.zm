    Part 
    {
        on_event:entry()
        {
            blank_page.action_auto(this, BLANK_DURATION);
        }
    }
    
    Part test_instructions
    {
        on_event:entry()
        {
            pause_page.set_text(TEST_INSTRUCTION, true);
            pause_page.action(this);
            control.button_box.enable_all_buttons(CONTINUE);
        }
    }
    
